<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme.FullScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_blue"
    android:layout_gravity="center_vertical"
    tools:context=".Login.LoginActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/card_margin"
        app:cardElevation="@dimen/card_elevation"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="@dimen/card_radius"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/activity_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Login"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-light"
                android:textSize="@dimen/font_size_header"
                android:layout_margin="@dimen/margin_item"
                android:textColor="@color/textColorHeader"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="@dimen/input_drawable_padding"
                android:hint="@string/input_email"
                android:textSize="@dimen/font_size_input"
                android:cursorVisible="false"
                android:focusable="true"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColorHint"
                android:id="@+id/login_edt_user_name"
                android:background="@drawable/bg_input"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="@dimen/input_drawable_padding"
                android:hint="@string/input_password"
                android:focusable="true"
                android:inputType="textPassword"
                android:textColorHint="@color/textColorHint"
                android:textSize="@dimen/font_size_input"
                android:textColor="@color/textColor"
                android:id="@+id/login_edt_user_password"
                android:background="@drawable/bg_input"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_login"
                android:translationZ="4dp"
                android:elevation="10dp"
                android:onClick="processLogin"
                android:layout_margin="@dimen/margin_item"
                android:textColor="@color/textColorBtn"
                android:textSize="@dimen/font_size_btn"
                android:id="@+id/btn_login"
                android:background="@drawable/btn_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginVertical="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:gravity="center"
                android:orientation="horizontal">
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_item"
                    android:layout_weight="1"
                    app:fabSize="normal"
                    app:borderWidth="0.2dp"
                    app:backgroundTint="#108dc7"
                    android:id="@+id/btn_login_facebook"
                    android:src="@drawable/ic_facebook"/>
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_item"
                    android:layout_weight="1"
                    app:backgroundTint="#12c2e9"
                    app:fabSize="normal"
                    app:borderWidth="0.2dp"
                    android:id="@+id/btn_login_twitter"
                    android:src="@drawable/ic_twitter"/>
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_item"
                    android:layout_weight="1"
                    app:backgroundTint="#f64f59"
                    app:fabSize="normal"
                    app:borderWidth="0.2dp"
                    android:id="@+id/btn_login_google"
                    android:src="@drawable/ic_google"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:layout_margin="@dimen/margin_item"
                android:text="@string/login_create"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="@dimen/margin_item"
                android:text="@string/sign_up"
                android:textColor="@color/textColorHeader"
                android:textSize="@dimen/font_size_text"
                android:textAllCaps="true"
                android:onClick="processSignUp"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>