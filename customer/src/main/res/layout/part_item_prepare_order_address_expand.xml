<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/margin_item"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="@dimen/input_drawable_padding"
            android:hint="@string/input_location_pickup"
            android:inputType="text"
            android:textColorHint="@color/textColorHint"
            android:textSize="@dimen/font_size_input"
            android:textColor="@color/textColor"
            android:id="@+id/prepare_order_address_pick_up"
            android:background="@drawable/bg_input"/>

    </android.support.v7.widget.LinearLayoutCompat>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/margin_item"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="@dimen/input_drawable_padding"
            android:hint="@string/input_location_dropoff"
            android:inputType="text"
            android:textColorHint="@color/textColorHint"
            android:textSize="@dimen/font_size_input"
            android:textColor="@color/textColor"
            android:id="@+id/prepare_order_address_drop_off"
            android:background="@drawable/bg_input"/>

    </android.support.v7.widget.LinearLayoutCompat>



</LinearLayout>