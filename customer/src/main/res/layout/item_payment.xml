<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardBackgroundColor="@color/bgWhite"
    app:cardCornerRadius="@dimen/card_radius"
    android:layout_width="match_parent"
    app:cardElevation="@dimen/card_elevation"
    android:layout_marginHorizontal="@dimen/card_margin"
    android:layout_marginVertical="@dimen/card_margin"
    android:forceHasOverlappingRendering="true"
    android:overScrollMode="always"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2.5">
            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_item"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_weight="0.7">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cash_payment"
                    android:layout_marginLeft="@dimen/margin_item"
                    android:id="@+id/item_prepare_order_payment_type1"
                    android:textColor="@color/textColor"
                    android:fontFamily="sans-serif-condensedblack"
                    android:textSize="@dimen/font_size_title_item"/>

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:id="@+id/btn_detail_payment1"
                android:layout_weight="0.3">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/margin_item"
                    android:src="@drawable/ic_arrow_forward"
                    />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2.5">
            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_item"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_weight="0.7">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cash_payment"
                    android:layout_marginLeft="@dimen/margin_item"
                    android:id="@+id/item_prepare_order_payment_type2"
                    android:textColor="@color/textColor"
                    android:fontFamily="sans-serif-condensedblack"
                    android:textSize="@dimen/font_size_title_item"/>

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:id="@+id/btn_detail_payment2"
                android:layout_weight="0.3">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/margin_item"
                    android:src="@drawable/ic_arrow_forward"
                    />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2.5">
            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_item"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_weight="0.7">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cash_payment"
                    android:layout_marginLeft="@dimen/margin_item"
                    android:id="@+id/item_prepare_order_payment_type3"
                    android:textColor="@color/textColor"
                    android:fontFamily="sans-serif-condensedblack"
                    android:textSize="@dimen/font_size_title_item"/>

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:id="@+id/btn_detail_payment3"
                android:layout_weight="0.3">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/margin_item"
                    android:src="@drawable/ic_arrow_forward"
                    />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2.5">
            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_item"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_weight="0.7">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cash_payment"
                    android:layout_marginLeft="@dimen/margin_item"
                    android:id="@+id/item_prepare_order_payment_type"
                    android:textColor="@color/textColor"
                    android:fontFamily="sans-serif-condensedblack"
                    android:textSize="@dimen/font_size_title_item"/>

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:id="@+id/btn_detail_payment"
                android:layout_weight="0.3">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/margin_item"
                    android:src="@drawable/ic_arrow_forward"
                    />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>