<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_item"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.uniquestudio.library.CircleCheckBox
        android:id="@+id/item_choose_check_box"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        app:background_color="@color/bgInputBlue"
        app:border_color="@color/bgInputBlue"
        app:tick_color="@color/bgBlue"
        app:animation_duration="10"
        app:tick_width="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/margin_item"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_service"
            android:layout_marginLeft="@dimen/margin_item"
            android:id="@+id/item_choose_txt_title"
            android:textColor="@color/textColor"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/font_size_title_item"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_item"
            android:textColor="@color/textColor"
            android:id="@+id/item_choose_txt_sub_title"
            android:text="@string/service_sub_title"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/font_size_sub_title"/>
    </LinearLayout>


</LinearLayout>