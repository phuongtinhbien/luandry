<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/bgWhite"
    app:cardMaxElevation="20dp"
    app:cardCornerRadius="20dp"
    android:forceHasOverlappingRendering="true"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/popup_margin"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_popup_content"
            android:layout_margin="@dimen/popup_margin"
            android:textSize="@dimen/font_size_text"
            android:text="@string/notify_successfully_saved"
            android:textColor="@color/textColor"
            android:textAlignment="center"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:layout_marginTop="@dimen/popup_margin"
            android:layout_marginBottom="@dimen/popup_margin"
            android:layout_marginRight="@dimen/btn_margin_left_right"
            android:layout_marginLeft="@dimen/btn_margin_left_right"
            android:textColor="@color/textColorBtn"
            android:textSize="@dimen/font_size_btn"
            android:id="@+id/btn_popup"
            android:background="@drawable/btn_bg"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/popup_margin"
            android:id="@+id/progress_popup"
            style="@style/Widget.AppCompat.ProgressBar"
            />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_popup"></ListView>

    </LinearLayout>

</android.support.v7.widget.CardView>