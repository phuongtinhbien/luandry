<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="148dp"
    android:layout_height="148dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/bgWhite"
    app:cardMaxElevation="20dp"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/card_elevation"
    android:layout_marginHorizontal="@dimen/card_margin"
    android:layout_marginVertical="@dimen/margin_item"
    android:forceHasOverlappingRendering="true"
    android:overScrollMode="always"
    android:foreground="?selectableItemBackground"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_promotion"
            android:id="@+id/item_search_store_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_service"
            android:layout_marginLeft="@dimen/margin_item"
            android:id="@+id/item_service_txt_title"
            android:textColor="@color/textColor"
            android:fontFamily="sans-serif-black"
            android:textSize="@dimen/font_size_title_item"/>
        <RatingBar
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:stepSize="1"
            android:numStars="5"
            android:min="1"
            android:layout_margin="@dimen/margin_item"/>

    </LinearLayout>

</android.support.v7.widget.CardView>