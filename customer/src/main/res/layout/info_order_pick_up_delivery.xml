<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:weightSum="2">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_item"
            android:drawablePadding="@dimen/margin_item"
            android:fontFamily="sans-serif-black"
            android:text="@string/date_time_pick_up"
            android:textColor="@color/textColor"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/prepare_order_date_pick_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-black"
            android:text="Today, AUG 30"
            android:textSize="@dimen/font_size_text_mini" />

        <TextView
            android:id="@+id/prepare_order_time_pick_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="9:30 AM"
            android:textSize="@dimen/font_size_text_mini" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_marginLeft="@dimen/margin_item"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_item"
            android:drawablePadding="@dimen/margin_item"
            android:fontFamily="sans-serif-black"
            android:text="@string/delivery"
            android:textColor="@color/textColor"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <com.uniquestudio.library.CircleCheckBox
                android:id="@+id/prepare_order_delivery_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_item"
                app:animation_duration="10"
                app:background_color="@color/bgInputBlue"
                app:border_color="@color/bgInputBlue"
                app:tick_color="@color/bgBlue"
                app:tick_width="2dp" />

            <TextView
                android:id="@+id/prepare_order_devlivery_1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="in 2 - 3 days"
                android:textSize="@dimen/font_size_text_mini" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <com.uniquestudio.library.CircleCheckBox
                android:id="@+id/prepare_order_delivery_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_item"
                app:animation_duration="10"
                app:background_color="@color/bgInputBlue"
                app:border_color="@color/bgInputBlue"
                app:tick_color="@color/bgBlue"
                app:tick_width="2dp" />

            <TextView
                android:id="@+id/prepare_order_devlivery_2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="in 1 days"
                android:textSize="@dimen/font_size_text_mini" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <com.uniquestudio.library.CircleCheckBox
                android:id="@+id/prepare_order_delivery_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_item"
                app:animation_duration="10"
                app:background_color="@color/bgInputBlue"
                app:border_color="@color/bgInputBlue"
                app:tick_color="@color/bgBlue"
                app:tick_width="2dp" />

            <TextView
                android:id="@+id/prepare_order_devlivery_3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="your choice"
                android:textSize="@dimen/font_size_text_mini" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <com.github.florent37.androidslidr.Slidr
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:slidr_regions_centerText="false"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="@dimen/margin_item"
        app:slidr_regions="false"
        android:id="@+id/item_prepare_order_seek_day"
        app:slidr_region_leftColor="@color/colorAccent"
        app:slidr_backgroundColor="@color/bgInputBlue"/>
</LinearLayout>